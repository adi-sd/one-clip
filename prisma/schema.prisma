generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  // âœ… Store userId directly from client
  name      String
  content   String
  listType  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
